<!--users show -->

<div>
  <%= render 'users/info', user: @user %>
  <%= render 'books/form', book: @book %>
</div>

<div>
  <h2>Books</h2>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |x| %>
      <tr>
        <td><%= image_tag @user.get_profile_image(100,100) %></td>
        <td>
          <%= link_to book_path(x.id) do %>
            <%= x.title %>
          <% end %>
        </td>
        <td><%= x.body %></td>
     </tr>
    <% end %>
  </tbody>
</div>
