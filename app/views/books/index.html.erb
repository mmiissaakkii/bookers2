<!-- 投稿一覧 -->
<h2>Books</h2>

 <table>
      <thead>
          <tr>
              <th>Title</th>
              <th>Body</th>
              <th colspan="3"></th>
          </tr>
      </thead>
  <% @books.each do |book| %>
    <tbody>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td></td>
          <td><%= link_to "Destroy",book_path(book.id),method: :delete,"data-confirm"=>"Are you sure?" %></td>
    </tbody>
  <% end %>
</table>

<%= render 'books/form', book:@book %>