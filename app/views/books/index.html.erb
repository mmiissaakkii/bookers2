<h2>Books</h2>
 <table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<% @books.each do |book| %>
  <tbody>
    <tr>
      <td><%= image_tag book.user.get_profile_image(100,100) %></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
  </tbody>
<% end %>
</table>

<%= render 'users/info', user: @user %>
<%= render 'books/form', book: @book %>